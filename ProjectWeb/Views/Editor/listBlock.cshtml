@model List<Product>


@{
    ViewData["Title"] = "listBlock";
    Layout = "~/Views/Shared/layoutEditor.cshtml";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Brand
                </th>
                <th>
                    Condition
                </th>
                <th>
                    Size
                </th>
                <th>
                    Price
                </th>
                <th>
                    Funtion
                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model)
            {
            <tr>
                <td width="30%">@it.Id</td>
                <td width="30%">@it.Name</td>
                <td width="30%">@it.Brand</td>
                <td width="30%">@it.Condition</td>
                <td width="30%">@it.Size</td>
                <td width="30%">@it.Price</td>
                <td width="30%">
                    <div div class="w-40 btn-group" role="group">
                        <a asp-controller="Editor" asp-action="unblockPro" asp-route-Id="@it.Id" class="btn btn-primary mx-1"> UnBlock </a>
                        <a asp-controller="Editor" asp-action="delete" asp-route-Id="@it.Id" class="btn btn-danger"> Delete </a>


                    </div>
                </td>
            </tr>
            }

        </tbody>

    </table>

    <a asp-controller="Editor" asp-action="listProduct" class="btn btn-secondary mx-1"> Back </a>
}
