@model List<User>


@{
    ViewData["Title"] = "listBlock";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>                          
                <th>
                    UserName
                </th>
                <th>
                    DateJoin
                </th>
                <th>
                    Funtion
                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model)
            {
                <tr>
                    <td width="30%">@it.Id</td>
                    <td width="30%">@it.Name</td>
                    <td width="30%">@it.Email</td>                      
                    <td width="30%">@it.UserName</td>
                    <td width="30%">@it.Datejoin</td>
                    <td width="30%">
                        <div div class="w-40 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="unBlockUser" asp-route-Id="@it.Id" class="btn btn-danger"> UnBlock </a>
                            <a asp-controller="Admin" asp-action="delete" asp-route-Id="@it.Id" class="btn btn-success mx-1"> Delete </a>
                            

                        </div>
                    </td>
                </tr>
            }

        </tbody>

    </table>

    <a asp-controller="Admin" asp-action="listUser" class="btn btn-secondary mx-1"> Back </a>
}


